generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  phone       String   @unique
  firstName   String
  lastName    String
  dateOfBirth DateTime
  address     String
  city        String
  state       String
  zipCode     String
  country     String
  kycStatus   String   @default("PENDING")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  accounts    Account[]
  cards       Card[]
  managers    Manager[]
  
  @@map("users")
}

model Account {
  id            String   @id @default(cuid())
  accountNumber String   @unique
  accountType   String
  balance       Decimal  @default(0)
  currency      String   @default("INR")
  isActive      Boolean  @default(true)
  userId        String
  managerId     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  user         User         @relation(fields: [userId], references: [id])
  manager      Manager?     @relation(fields: [managerId], references: [id])
  cards        Card[]
  transactions Transaction[]
  
  @@map("accounts")
}

model Card {
  id           String   @id @default(cuid())
  cardNumber   String   @unique
  cardType     String
  expiryMonth  Int
  expiryYear   Int
  cvv          String
  cardHolder   String
  isActive     Boolean  @default(true)
  dailyLimit   Decimal  @default(1000)
  monthlyLimit Decimal  @default(10000)
  userId       String
  accountId    String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  user         User         @relation(fields: [userId], references: [id])
  account      Account      @relation(fields: [accountId], references: [id])
  transactions Transaction[]
  
  @@map("cards")
}

model Manager {
  id         String   @id @default(cuid())
  employeeId String   @unique
  userId     String   @unique
  department String
  level      String
  territory  String[]
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  user     User      @relation(fields: [userId], references: [id])
  accounts Account[]
  
  @@map("managers")
}

model Transaction {
  id            String   @id @default(cuid())
  type          String
  amount        Decimal
  description   String
  status        String   @default("PENDING")
  reference     String   @unique
  accountId     String?
  cardId        String?
  fromAccount   String?
  toAccount     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  account Account? @relation(fields: [accountId], references: [id])
  card    Card?    @relation(fields: [cardId], references: [id])
  
  @@map("transactions")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  channel   String
  subject   String?
  content   String
  htmlContent String?
  status    String   @default("PENDING")
  sentAt    DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("notifications")
}